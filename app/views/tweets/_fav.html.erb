<% if user_signed_in? %>
  <% if @tweet.fav_added?(current_user.id) %>
    <%= button_to "/tweets/#{@tweet.id}/tweet_favs/#{@tweet_fav.id}", method: :delete, id: "like-button", remote: true do %>
      <%= image_tag("icon_red_heart.svg", size: "50x50") %>
      <span>
        <%= @tweet.favs_count %>
      </span>
    <% end %>
  <% else %>
    <%= button_to tweet_tweet_favs_path(@tweet), id: "like-button", remote: true do %>
      <%= image_tag("icon_heart.svg", size: "50x50") %>
      <span>
        <%= @tweet.favs_count %>
      </span>
    <% end %>
  <% end %>
<% else %>
  <%= image_tag("icon_heart.svg", size: "50x50") %>
    <span>
      <%= @tweet.favs_count %>
    </span>
<% end %>
